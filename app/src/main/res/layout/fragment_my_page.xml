<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.myPage.MyPageFragment"
        android:background="@color/black">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/image_user" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:text="username" />

        <TextView
            android:id="@+id/label_user_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="평론가 점수"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

        <TextView
            android:id="@+id/tv_user_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/label_user_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="4434"
            tools:textColor="#FFB952" />

        <LinearLayout
            android:id="@+id/layout_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:layout_editor_absoluteX="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_bold"
                android:text="좋아요" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_bold"
                android:text="프로필 설정" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_user_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="선호 분석"
            android:textColor="@color/white"
            android:textSize="26dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_btn_group"
            tools:layout_editor_absoluteX="10dp" />

        <LinearLayout
            android:id="@+id/layout_preference_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_user_interest">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:text="키워드"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_title"/>

                <TextView
                    android:id="@+id/tv_keyword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 키워드1"/>

                <TextView
                    android:id="@+id/tv_keyword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 키워드2"/>

                <TextView
                    android:id="@+id/tv_keyword3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 키워드3"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:text="장르"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_title"/>

                <TextView
                    android:id="@+id/tv_genre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/background_tv_item"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/white"
                    tools:text="분석 장르1" />

                <TextView
                    android:id="@+id/tv_genre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 장르2"/>

                <TextView
                    android:id="@+id/tv_genre3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 장르3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="인물"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_title"/>

                <TextView
                    android:id="@+id/tv_person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 인물1"/>

                <TextView
                    android:id="@+id/tv_person2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 인물2"/>

                <TextView
                    android:id="@+id/tv_person3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/background_tv_item"
                    tools:text="분석 인물3"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
